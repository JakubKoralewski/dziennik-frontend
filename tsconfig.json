{
	"compilerOptions": {
		"target": "esnext",
		"allowJs": true,
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"strictNullChecks": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": false,
		"sourceMap": true,
		"baseUrl": ".",
		"experimentalDecorators": true,
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		],
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules",
		"tests/*",
		"__mocks__/*"
	]
}