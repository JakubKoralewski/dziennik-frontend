{
	"compilerOptions": {
		"target": "esnext",
		"allowJs": true,
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"strictNullChecks": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": false,
		"sourceMap": true,
		"baseUrl": ".",
		"experimentalDecorators": true,
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"types": [
			"jest",
			"node"
		],
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		],
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"src/config.ts",
		"src/mixins/TouchDetection.ts"
	],
	"exclude": [
		"node_modules"
	]
}